        <link href="http://netdna.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.css" rel="stylesheet">
        <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js"></script> 
        <script src="http://netdna.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.js"></script> 
        <link href="https://fonts.googleapis.com/css?family=Kelly+Slab" rel="stylesheet">
        <!-- include summernote css/js -->
        <link href="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.11/summernote.css" rel="stylesheet">
        <script src="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.11/summernote.js"></script>

        <style>
            body { padding-top:15px; background-color: black; font-family: 'Kelly Slab', cursive;}
            img { width: 100%;}
        </style>
    </head>
    <body>

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" style="background-color: yellow; display: flex; justify-content: center; padding: 1em; font-size: 2em; position: sticky; top: 0; z-index: 1;">
                <div class="container">
                <div class="collapse navbar-collapse" id="navbarResponsive">
                        <ul class="nav nav-tabs">
                            <li>
                                <a href="/">HOME</a>
                            </li>
                            <li>
                                <a href="/create">CREATE</a>
                            </li>
                        </ul>
                </div>
                </div>
        </nav>
                
                <div class="container">
                        <div class="row centered-form">
                        <div class="col-xs-12 col-sm-3 col-md-10 col-sm-offset-2 col-md-offset-1">
                            <div class="panel panel-default" style="background-color: black; color: yellow;">
                                <div class="panel-heading" style="background-color: black; color: yellow;">
                                        <h1 class="panel-title" style="text-align: center; font-size: 3em;">Please sign up for <small style="color: white;">THE HIP HOP BIBLE</small></h1>
                                        </div>
                                        <div class="panel-body">
                                        <form role="form">
                                            <div class="row">
                                                <div class="col-xs-6 col-sm-6 col-md-6 col-md-offset-3">
                                                    <label for="first_name" style="color: yellow;">First Name</label>
                                                    <div class="form-group">
                                                        <input type="text" name="first_name" id="first_name" class="form-control input-sm" placeholder="First Name">
                                                    </div>
                                                </div>
                                                <div class="col-xs-6 col-sm-6 col-md-6 col-md-offset-3">
                                                    <label for="last_name" style="color: yellow;">Last Name</label>
                                                    <div class="form-group">
                                                        <input type="text" name="last_name" id="last_name" class="form-control input-sm" placeholder="Last Name">
                                                    </div>
                                                </div>
                                            </div>
                
                                            <div class="col-xs-6 col-sm-6 col-md-6 col-md-offset-3">
                                                <label for="email" style="color: yellow;">Email</label>
                                                <div class="form-group">
                                                    <input type="email" name="email" id="email" class="form-control input-sm" placeholder="Email Address">
                                                </div>
                                            </div>
                
                                            <div class="row">
                                                <div class="col-xs-6 col-sm-6 col-md-6 col-md-offset-3">
                                                    <label for="password" style="color: yellow;">Password</label>
                                                    <div class="form-group">
                                                        <input type="password" name="password" id="password" class="form-control input-sm" placeholder="Password">
                                                    </div>
                                                </div>
                                                <div class="col-xs-6 col-sm-6 col-md-6 col-md-offset-3">
                                                    <label for="password_confirmation" style="color: yellow;">Confirm Password</label>
                                                    <div class="form-group">
                                                        <input type="password" name="password_confirmation" id="password_confirmation" class="form-control input-sm" placeholder="Confirm Password">
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <div class="col-xs-6 col-sm-6 col-md-6 col-md-offset-3">
                                                <input type="submit" value="Register" class="btn btn-info btn-block" style="background-color: black; color: yellow;">
                                            </div>
                                        
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                <div class="panel-footer text-center">
                    <p>All rights reserved 2019 | Miguel.</p>
                </div>
            </div>
        </div>

    </body>
</html>
